# Environment Variables Template
# Copy this to .env and fill in your actual values

# MongoDB Connection String
# Get this from MongoDB Atlas
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/chatapp?retryWrites=true&w=majority

# Frontend URL (Important for deployment!)
# For local development: http://localhost:3000
# For production: your deployed frontend URL (e.g., https://your-app.netlify.app)
FRONTEND_URL=http://localhost:3000

# JWT Secret Key (Generate a random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Server Port (Render will set this automatically)
PORT=5000

# Node Environment
NODE_ENV=production